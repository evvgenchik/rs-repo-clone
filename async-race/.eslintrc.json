{
  "plugins": [
    "prettier",
    "import",
    "@typescript-eslint"
  ],
  "extends": [
    "prettier",
    "plugin:prettier/recommended",
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:css/recommended",
    "airbnb-base/legacy"
  ],
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },
  "rules": {
    "object-curly-newline": 0,
    "operator-linebreak": 0,
    "no-unused-vars": 0,
    "eol-last": [
      "error",
      "always"
    ],
    "no-param-reassign": 0,
    "comma-dangle": [
      "error",
      "never"
    ],
    "no-debugger": "off",
    "no-console": 0,
    "class-methods-use-this": "off",
    "@typescript-eslint/no-explicit-any": 2,
    "semi-style": [
      "error",
      "last"
    ],
    "prettier/prettier": [
      "error",
      {
        "endOfLine": "auto"
      }
    ]
  },
  "parser": "@typescript-eslint/parser"
}
